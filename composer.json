{
    "name": "bellangelo/codesniffer-naming-conventions",
    "description": "A list of Sniffs to set naming conventions in variables, properties, methods, function and classes.",
    "type": "phpcodesniffer-standard",
    "require": {
        "squizlabs/php_codesniffer": "^3.10",
        "php": "^v8.3"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Bellangelo\\CodesnifferNamingConventions\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bellangelo\\CodesnifferNamingConventions\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Aggelos Bellos",
            "email": "aggelosbellos7@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^11.4",
        "slevomat/coding-standard": "^8.15"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
