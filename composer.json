{
    "name": "bellangelo/coding-standard",
    "description": "Bellangelo Coding Standard for PHP_CodeSniffer complements Consistence Coding Standard by providing sniffs with additional checks.",
    "type": "phpcodesniffer-standard",
    "require": {
        "squizlabs/php_codesniffer": "^3",
        "php": "^v8.3",
        "doctrine/inflector": "^2.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
    },
    "license": "MIT",
	"scripts": {
		"phpcs": "phpcs",
		"phpcs:fix": "phpcbf",
		"phpstan": "phpstan analyse",
		"tests": "phpunit tests"
	},
    "autoload": {
        "psr-4": {
            "BellangeloCodingStandard\\": "BellangeloCodingStandard/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BellangeloCodingStandard\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Aggelos Bellos",
            "email": "aggelosbellos7@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^11.4",
        "slevomat/coding-standard": "^8.15",
        "phpstan/phpstan": "^1.12",
        "rector/rector": "^1.2"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
