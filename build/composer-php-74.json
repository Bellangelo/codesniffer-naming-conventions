{
	"name": "bellangelo/coding-standards",
	"description": "Bellangelo Coding Standard for PHP_CodeSniffer complements Consistence Coding Standard by providing sniffs with additional checks.",
	"type": "phpcodesniffer-standard",
	"require": {
		"squizlabs/php_codesniffer": "^3",
		"php": "^v7.4",
		"doctrine/inflector": "^2.0"
	},
	"license": "MIT",
	"scripts": {
		"phpcs": "phpcs",
		"phpcs:fix": "phpcbf",
		"phpstan": "phpstan analyse",
		"tests": "phpunit tests"
	},
	"autoload": {
		"psr-4": {
			"BellangeloCodingStandards\\": "BellangeloCodingStandards/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"BellangeloCodingStandards\\": "tests/"
		}
	},
	"authors": [
		{
			"name": "Aggelos Bellos",
			"email": "aggelosbellos7@gmail.com"
		}
	],
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
